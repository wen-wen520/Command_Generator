<Page
    x:Class="Command_Generator.EffectsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Command_Generator"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True"
    mc:Ignorable="d">

    <Page.Resources>
        <CollectionViewSource x:Name="GroupedEffects" IsSourceGrouped="True" />
        <DataTemplate x:Key="EffectTemplate">
            <StackPanel Padding="10" Orientation="Horizontal">
                <TextBlock
                    Margin="0,0,20,0"
                    FontWeight="Bold"
                    Text="{Binding Name}" />
                <TextBlock Margin="0,0,20,0" Text="{Binding Id}" />
                <TextBlock Margin="0,0,20,0" Text="{Binding Lvl}" />
                <TextBlock Margin="0,0,20,0" Text="{Binding Duration}" />
            </StackPanel>
        </DataTemplate>
    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <ContentControl Grid.Column="0">
            <StackPanel Padding="20" ScrollViewer.HorizontalScrollBarVisibility="Auto">

                <StackPanel.ChildrenTransitions>
                    <TransitionCollection>
                        <EntranceThemeTransition FromVerticalOffset="300" IsStaggeringEnabled="True" />
                        <RepositionThemeTransition IsStaggeringEnabled="False" />
                    </TransitionCollection>
                </StackPanel.ChildrenTransitions>

                <TextBlock
                    Margin="20"
                    HorizontalAlignment="Stretch"
                    FontWeight="Bold"
                    Style="{StaticResource TitleTextBlockStyle}"
                    Text="命令/effect" />

                <muxc:RadioButtons
                    x:Name="CommandType"
                    Width="300"
                    Margin="20"
                    HorizontalAlignment="Stretch"
                    Header="操作方式"
                    MaxColumns="3">
                    <RadioButton Content="给予效果" />
                    <RadioButton Content="清除效果" />
                </muxc:RadioButtons>

                <AutoSuggestBox
                    x:Name="Target"
                    Margin="20"
                    HorizontalAlignment="Stretch"
                    Header="目标选择器 玩家名称"
                    PlaceholderText="目标（玩家名或选择器）"
                    SuggestionChosen="AutoSuggestBox_SuggestionChosen"
                    TextChanged="AutoSuggestBox_TextChanged" />

                <Button
                    x:Name="GenerateCommandButton"
                    Margin="20"
                    HorizontalAlignment="Stretch"
                    Click="GenerateCommand_Click"
                    Content="生成命令"
                    IsEnabled="False"
                    Style="{StaticResource AccentButtonStyle}" />
                <Button
                    x:Name="GeneratePotionNBTButton"
                    Margin="20"
                    HorizontalAlignment="Stretch"
                    Click="GeneratePotionNBT_Click"
                    Content="生成药水NBT"
                    IsEnabled="False"
                    Style="{StaticResource AccentButtonStyle}" />
            </StackPanel>
        </ContentControl>

        <ContentControl Grid.Column="1">
            <ScrollViewer>
                <StackPanel
                    Padding="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Vertical">

                    <StackPanel.ChildrenTransitions>
                        <TransitionCollection>
                            <EntranceThemeTransition FromVerticalOffset="300" IsStaggeringEnabled="True" />
                            <RepositionThemeTransition IsStaggeringEnabled="False" />
                        </TransitionCollection>
                    </StackPanel.ChildrenTransitions>



                    <StackPanel
                        x:Name="EffectsListLoadingAnimation"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                        <TextBlock
                            Margin="20"
                            HorizontalAlignment="Center"
                            Text="效果列表加载中，请稍后" />
                        <muxc:ProgressRing
                            Width="60"
                            Height="60"
                            Margin="20"
                            HorizontalAlignment="Center"
                            IsActive="True" />
                    </StackPanel>

                    <!--  标题行  -->
                    <StackPanel
                        x:Name="EffectsTitleBar"
                        Margin="40,20,20,10"
                        Orientation="Horizontal"
                        Visibility="Collapsed">
                        <TextBlock
                            Width="130"
                            Margin="5"
                            FontWeight="Bold"
                            Text="名称" />
                        <TextBlock
                            Width="120"
                            Margin="5"
                            FontWeight="Bold"
                            Text="持续时间" />
                        <TextBlock
                            Width="110"
                            Margin="5"
                            FontWeight="Bold"
                            Text="等级" />
                        <TextBlock
                            Width="120"
                            Margin="5"
                            FontWeight="Bold"
                            Text="粒子效果" />
                    </StackPanel>
                    <ListView
                        x:Name="EffectsListView"
                        Margin="20"
                        ItemsSource="{x:Bind Effects}"
                        SelectionChanged="EffectsListView_SelectionChanged"
                        SelectionMode="Multiple">

                        <ListView.GroupStyle>
                            <GroupStyle>
                                <GroupStyle.HeaderTemplate>
                                    <DataTemplate>
                                        <Border AutomationProperties.AccessibilityView="Raw">
                                            <TextBlock
                                                AutomationProperties.AccessibilityView="Raw"
                                                Style="{ThemeResource TitleTextBlockStyle}"
                                                Text="{Binding Key}" />
                                        </Border>
                                    </DataTemplate>
                                </GroupStyle.HeaderTemplate>
                            </GroupStyle>
                        </ListView.GroupStyle>

                        <ListView.ItemTemplate>
                            <DataTemplate>


                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Width="100"
                                        Margin="5"
                                        Text="{Binding Name}" />
                                    <muxc:NumberBox
                                        Width="120"
                                        Margin="5"
                                        LargeChange="10"
                                        Maximum="256"
                                        Minimum="1"
                                        SmallChange="1"
                                        SpinButtonPlacementMode="Compact"
                                        Value="{Binding Duration, Mode=TwoWay}" />
                                    <muxc:NumberBox
                                        Width="120"
                                        Margin="5"
                                        LargeChange="10"
                                        Minimum="1"
                                        SmallChange="1"
                                        SpinButtonPlacementMode="Compact"
                                        Value="{Binding Lvl, Mode=TwoWay}" />

                                    <ToggleSwitch
                                        Width="40"
                                        Margin="5,0,0,0"
                                        IsOn="{Binding Particle, Mode=TwoWay}"
                                        OffContent="无"
                                        OnContent="有" />
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </ScrollViewer>
        </ContentControl>
    </Grid>
</Page>