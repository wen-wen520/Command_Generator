<Page
    x:Class="Command_Generator.UI.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Command_Generator.UI.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    Background="{ThemeResource LayerOnMicaBaseAltFillColorDefaultBrush}"
    mc:Ignorable="d"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="44" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <Grid x:Name="AppTitleBar" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="LeftPaddingColumn" Width="0" />
                <ColumnDefinition />
                <ColumnDefinition x:Name="RightPaddingColumn" Width="0" />
            </Grid.ColumnDefinitions>
            <Image
                x:Name="TitleBarIcon"
                Grid.Column="1"
                Width="16"
                Height="16"
                Margin="8,0,0,0"
                HorizontalAlignment="Left"
                Source="ms-appx:///Assets/StoreLogo.png" />
            <TextBlock
                x:Name="TitleBarTextBlock"
                Grid.Column="1"
                Margin="28,0,0,0"
                VerticalAlignment="Center"
                Style="{StaticResource CaptionTextBlockStyle}"
                Text="Title" />
        </Grid>


        <muxc:NavigationView
            x:Name="NavView"
            Grid.Row="1"
            IsSettingsVisible="True"
            SelectionChanged="NavigationView_SelectionChanged">
            <muxc:NavigationView.MenuItems>
                <muxc:NavigationViewItem
                    Content="主页"
                    Icon="Home"
                    Tag="HomePage" />
                <muxc:NavigationViewItem
                    Content="命令/Experience"
                    Icon="Comment"
                    Tag="Experience" />
                <muxc:NavigationViewItem
                    Content="命令/Give"
                    Icon="Keyboard"
                    Tag="Give" />
                <muxc:NavigationViewItem
                    Content="命令/Effect"
                    Icon="NewFolder"
                    Tag="EffectsPage" />
                <muxc:NavigationViewItem
                    Content="附魔选择"
                    Icon="NewFolder"
                    Tag="EnchantmentsPage" />
                <muxc:NavigationViewItem
                    Content="附魔选择"
                    Icon="NewFolder"
                    Tag="SelectEffectsPage" />
            </muxc:NavigationView.MenuItems>
            <Frame x:Name="contentFrame" />
        </muxc:NavigationView>
    </Grid>
</Page>
